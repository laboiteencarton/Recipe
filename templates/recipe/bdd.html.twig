
{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Recipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Picture</th>
                <th>PreparationTime</th>
                <th>CookingTime</th>
                <th>Price</th>
                <th>Comments</th>
                <th>actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.picture }}</td>
                <td>{{ recipe.preparationTime }}</td>
                <td>{{ recipe.CookingTime }}</td>
                <td>{{ recipe.Price }}</td>
                <td> {% for comment in recipe.comments %}
                     {{ comment.author }} {{comment.message}}
                    
                {% endfor %}</td>
                <td>
                    <a href="{{ path('recipe_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipe_new') }}">Create new</a>
{% endblock %}
