{% extends 'base.html.twig' %}

{% block title %}Recipe index
{% endblock %}

{% block body %}


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators text-warning">
        <li data-target="carousel-item active" data-slide-to="0" class="active"></li>
        <li data-target="carousel-item active" data-slide-to="1"></li>
        <li data-target="carousel-item active" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" style="height: 500px;">
        <div class="carousel-item active ">
            <img class="d-block w-100" src="https://nit.pt/wp-content/uploads/2018/07/63be220ad57c2c777db495482fb9cab0-754x394.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100"  src="https://images.ricardocuisine.com/services/recipes/1074x1074_5451-background.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://nit.pt/wp-content/uploads/2018/07/63be220ad57c2c777db495482fb9cab0-754x394.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="col-12 bg-white rounded text-uppercased d-flex justify-content-between p-top 10">

    {% for recipe in recipes %}


        <div class="col-sm-4 shadow p-3 mb-5 bg-white rounded ">

            <a href="{{ path('recipe_edit', {'id': recipe.id}) }}" class="btn btn-info">Editer</a>
            <h1>
                <center>
                    <div class="label label-default">{{recipe.title}}</div>
                </center>
            </h1>
            <center>
                <img src="{{recipe.picture}}" alt="photo_de_recette"></center>
            <medium></br>
            <strong>
                Temps de préparation :
            </strong>
            {% if recipe.preparationTime == 60 %}
                1h
            {% elseif recipe.preparationTime > 60 %}
                {% set time = recipe.preparationTime - 60 %}
                1h
                {{time}}
                min
            {% else %}
                {{recipe.preparationTime}}
                min
            {% endif %}
        </medium>


        <medium></br>
        <strong>
            Temps de cuisson :
        </strong>
        {{recipe.CookingTime}}
        min</br>
    <strong>
        Prix:
    </strong>
    {{recipe.Price}}
    €
